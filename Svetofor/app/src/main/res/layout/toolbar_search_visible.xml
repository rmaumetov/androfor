<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_search_visible"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="2dp">

    <LinearLayout
        android:id="@+id/ll_toolbar_subtitle_visible_for_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search_toolbar"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:paddingStart="10dp"
            android:paddingBottom="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_grey_24dp" />

            <TextView
                android:id="@+id/toolbar_subtitle_visible_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Поиск по каталогу..."
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="3dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"
                android:textColorHint="#D1D1D1"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>


        <ImageView
            android:id="@+id/toolbar_subtitle_visible_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/ic_clear_black_24dp"
            android:backgroundTint="@color/colorDarkGrey" />



        <ImageView
            android:id="@+id/toolbar_subtitle_visible_iv_basket"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:paddingStart="6dp"
            android:src="@drawable/ic_shopping_cart_white_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_toolbar_subtitle_visible"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbar_subtitle_visible_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/toolbar_subtitle_visible_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/toolbar_subtitle_visible_iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_filter_list_black_24dp" />

    </LinearLayout>
</android.support.v7.widget.Toolbar>
